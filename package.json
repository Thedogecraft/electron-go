{
  "name": "dashboard-electron-go",
  "version": "1.0.0",
  "description": "a system dashboard made with electron and go",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
